<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>My Forum</title>
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
    <script src="javascripts/angular.min.js"></script>
    <script src="javascripts/angular-ui-router.js"></script>
    <script src="javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="myForum">
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
    </div>
</div>

<script type="text/ng-template" id="/home.html">
    <div class="page-header">
        <h1>My Forum</h1>
    </div>

    <div ng-repeat="post in ctrl.posts | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
              ng-click="ctrl.incrementUpvotes(post)"></span>
        <span ng-bind="post.upvotes"></span>
        <span style="font-size:20px; margin-left:10px;">
              <span ng-bind="post.title"></span>
          <span ng-hide="post.link">
            <span ng-bind="post.title"></span>
          </span>
            <span>
              <a href="#/posts/{{post._id}}">Comments</a>
            </span>
        </span>
    </div>

    <form ng-submit="ctrl.addPost()"
          style="margin-top:30px;">
        <h3>Add a new post</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Title"
                   ng-model="ctrl.title">
        </div>
        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Question"
                   ng-model="ctrl.question">
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</script>
<script type="text/ng-template" id="/posts.html">
    <div class="page-header">
        <span ng-bind="postCtrl.post.title"></span>
      <span ng-bind="postCtrl.post.question">
      </span>
        </h3>
    </div>

    <div ng-repeat="comment in postCtrl.post.comments | orderBy:'-upvotes'">
    <span class="glyphicon glyphicon-thumbs-up"
          ng-click="postCtrl.incrementUpvotes(comment)"></span>
        <span ng-bind="comment.upvotes"></span> - by <span ng-bind="comment.author"></span>
    <span style="font-size:20px; margin-left:10px;">
      <span ng-bind="comment.body"></span>
    </span>
    </div>
    <form ng-submit="postCtrl.addComment()"
          style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Comment"
                   ng-model="postCtrl.body">
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
</script>
</body>
</html>